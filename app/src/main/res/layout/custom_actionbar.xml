<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <TableRow>

        <ImageButton
            android:id="@+id/action_bar_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_notifications_black_24dp" />

        <ImageButton
            android:id="@+id/action_bar_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_favorite_black_24dp" />


        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/navLight"
            android:textSize="22sp"
            android:textStyle="bold" />

        <SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:closeIcon="@drawable/ic_clear_black_24dp"
            android:queryHint="@string/search"
            android:searchHintIcon="@drawable/ic_search_black_24dp"
            android:searchIcon="@drawable/ic_search_black_24dp" />


        <ImageButton
            android:id="@+id/action_bar_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_language_black_24dp" />


    </TableRow>

</TableLayout>
